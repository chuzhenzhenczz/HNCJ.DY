@model HNCJ.DY.Model.Message

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Edit</h2>
@section header{
    <script type="text/javascript">
        function submitForm() {
            var name = $("#Msg").val();
            
            if (name == "") {
                alert("消息不能为空？");
                return false;
            }
            
            $("form").submit();
        }
    </script>
   
    
    }
@section content{
    <div style="margin-top:-40px;">
    <div style="margin-bottom:10px">
			<div>发送者:</div>
			<input class="easyui-textbox"  style="width:100%;height:32px" type="text"  value="@Model.SenderID" readonly="true"  >
		</div>
    <div style="margin-bottom:10px">
			<div>接收者:</div>
			<input class="easyui-textbox"  style="width:100%;height:32px" type="text"  value="@Model.RecipientID" readonly="true" >
		</div>
    <div style="margin-bottom:10px">
			<div>消息:</div>
			<input class="easyui-textbox"  style="width:100%;height:60px" type="text" id="Msg" name="Msg" value="@Model.Msg" data-options="multiline:true"   >
		</div>
    
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.SenderID)
    @Html.HiddenFor(model => model.Status)
    @Html.HiddenFor(model => model.RegTime)
    @Html.HiddenFor(model => model.RecipientID)
    @Html.HiddenFor(model => model.DelFlag)
        </div>
    }