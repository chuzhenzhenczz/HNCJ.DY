@model HNCJ.DY.Model.UserInfo
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>后台管理系统</title>
    <link href="~/Content/html.css" rel="stylesheet" />
    <link href="~/Content/lib/ligerUI/skins/Aqua/css/ligerui-all.css" rel="stylesheet" />
    <script src="~/Content/lib/jquery/jquery-1.9.0.min.js"></script>
    <script src="~/Content/lib/ligerUI/js/core/base.js"></script>
    <script src="~/Content/lib/ligerUI/js/ligerui.min.js"></script>
    <script type="text/javascript">
        var tab = null;
        $(function () {

            $("#layout1").ligerLayout({ topHeight: 67, leftWidth: 200, allowTopResize: false, allowLeftResize: false, allowRightResize: false, allowBottomResize: false });
            $("#accordion1").ligerAccordion();
            var height = $(".l-layout-center").height();
            var width = $(".l-layout-center").width();

            var tab = $("#navtab1").ligerTab({ height: height, width: width });
            binClickEvent();

        });
      
        function binClickEvent() {
            $(".btnclick").click(function () {
                var title = $(this).text();
                var url = $(this).attr("url");
                var tabid = $(this).attr("id");
                f_addTab(tabid, title, url);
            });
        }
        function f_addTab(tabid, text, url) {
            var tab = liger.get("navtab1");
            
            tab.addTabItem({
                tabid: tabid,
                text: text,
                url: url
                
            });
        }

     </script> 
    <style type="text/css">
        body{ padding:5px; margin:0;}
        #layout1{  width:100%; margin:40px;  height:400px;
                   margin:0; padding:0;} 
        #accordion1 { height:270px;}
         h4{ margin:20px;}
         a{color:#475059;text-decoration:none;}
a:hover,a:active,a:focus{outline:none;text-decoration:none;color:#72afd2}
         ul,li,h1,h2,h3,h4,h5,h6,dl,dt,dd{padding:0;margin:0;}
ul{list-style:none}
        li {
            padding-left:30px;
            margin-top:5px;
        }
    </style>

 
</head>
<body>
    <div id="layout1">
             <div  position="left">
                 <div id="accordion1" style="height:100%"> 
         <div title="功能列表" data-icon="/Content/lib/ligerUI/skins/icons/calendar.gif">
             
              <ul>
                  @if (ViewBag.AllMenu != null) {
                      List<HNCJ.DY.Model.ActionInfo> list = ViewBag.AllMenu as List<HNCJ.DY.Model.ActionInfo>;
                      foreach (var item in list) { 
                      <li>
                         <a href="javascript:void(0);" class="btnclick" id="@item.ID" url="@item.Url" style="font-family:'Angsana New';font-size:15px;"  >@item.ActionName</a></li>
                      }
                  }
                    
                    
                </ul>
        </div>
         <div title="列表">
                <ul>
                    <li>列表一</li>
                    <li>列表二</li>
                    <li>列表三</li>
                    <li>列表四</li>
                    <li>列表五</li>
                </ul>
        </div> 
        <div title="其他" style="padding:10px"> 
        其他内容
        </div>
    </div>  


             </div>
            <div position="center" id="framecenter" >
                
                <div id="navtab1" style="width: 100%;height:100%; overflow:hidden; ">
                    <div tabid="home" title="我的主页" lselected="true"  style="height:100%;width:100%;overflow:hidden;" >
                        <iframe frameborder="0" id="showmessage" name="showmessage" src="/home/center"></iframe> 
                    </div>
                </div>
            </div>
            
            <div position="top" border="false" style="height: 65px; background: #B3DFDA; overflow: hidden;background-image: url('../../Content/Images/bg3.png'); ">
                <img src="~/Content/lib/images/logo.png" style="height:67px;" />
                <div style="margin:25px 10px 0 0;float:right;font-size:16px;font-family:'Adobe Devanagari';color: blue;">
            你好,&nbsp;<a href="#" class="btnclick" id="admin" url="/home/details" >@Model.UserName</a>&nbsp;|
            <a href="/userdoaction/adminExits" class="">注销</a>
        </div>
            </div>
            <div position="bottom" style="height:30px;background:#A9FACD;padding:10px; text-align:center">版权  &copy;  HNCJ.DY</div>
        </div> 
           
     

</body>
</html>
