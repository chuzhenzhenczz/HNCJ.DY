@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}

<h2>Index</h2>
@section header{
    <script type="text/javascript">
        function doaction(value) {
            var str = "";
            str += "<a href='javascript:void(0)' onclick=eidt('\/dailogue\/edit?id=" + value + "')>修改</a> &nbsp;&nbsp;";
            str += "<a href='javascript:void(0)' onclick=details('\/dailogue\/details?id=" + value + "')>详细</a> &nbsp;&nbsp;";
            str += "<a href='javascript:void(0)' onclick=deletes('\/dailogue\/delete','" + value + "')>移除</a> ";
            return str;
        }
        function menu(value) {
            if (value == null) return null;
            if (value) {
                return "是";
            }
            return "否";
        }
    </script>
}
       
    @section content{
        <table id="dg"  class="easyui-datagrid" width="100%" height="420" style="margin-left:0px"
		url="/dailogue/getalldailogues"
		toolbar="#toolbar" pagination="true" 
		rownumbers="true" fitColumns="true" >
	<thead>
		<tr> 
			<th field="ck" checkbox="true" width="50"></th>
			<th field="Name" width="80">标题</th>
								
			<th field="Status" width="50" align="center"  formatter="iSstatus">状态</th>
            <th field="RegTime" width="100" formatter="datetime">添加时间</th>
            <th field="ID" width="100" align="center" formatter="doaction">操作</th>
		</tr>
	</thead>
</table>
        <div id="toolbar">
	<a href="#" class="easyui-linkbutton" iconCls="icon-add" plain="true" onclick="newAction('/dailogue/add')">新增</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="editAction('/dailogue/edit')">编辑</a>
	<a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="destroyAction('/dailogue/delete')">移除</a>
    <div style="float:right;">
        <select name="itemid" id="itemid" class="select">
         <option value="1" >标题名</option>
         
     </select>
	<input name="key" id="key" type="text"class="input">
        <a href="#" class="easyui-linkbutton" iconCls="icon-search" plain="true" onclick="doSearch()">搜索</a>
    </div>

</div>
        }