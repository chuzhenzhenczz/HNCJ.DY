@model HNCJ.DY.Model.Template

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Edit</h2>
@section header{
    <script src="~/Content/jcrop/jquery.upload.js"></script>
    <script type="text/javascript">
        function submitForm() {
            var name = $("#Context").val();
            if (name == "" || name == null) {
                alert("模板资料名称不能为空！！");
                return false;
            }
            $("form").submit();
        }
        function doUpload() {
            var name = $("#Context").val();

            // 上传方法
            $.upload({
                // 上传地址
                url: '/UserDoAction/UploadFile',
                // 文件域名字
                fileName: 'Filedata',
                // 其他表单数据
                params: { name: name },
                // 上传完成后, 返回json, text
                dataType: 'json',
                // 上传之前回调,return true表示可继续上传
                onSend: function () {
                    return true;
                },
                // 上传之后回调
                onComplate: function (data) {
                    $("#path").attr('value', data.path);
                    $("#Context").attr('value', data.name);
                    
                    //alert(data.path);
                }
            });
        }
    </script>
    }
@section content{
    <div style="margin-bottom:10px">
			<div>模板资料名称:</div>
			<input  style="width:100%;height:32px" type="text" id="Context" name="Context" value="@Model.Context" >
		</div>
         
        <div style="margin-bottom:10px">
			<div>上传文件:<a href="#" onclick="doUpload();" class="btn" style="text-decoration:none;">上传</a></div>
			<input  type="text" style="width:100%;height:32px" id="path" name="Path" value="@Model.Path" readonly="true">
              
		</div>
       
                @Html.HiddenFor(model => model.DelFlag)
            
                @Html.HiddenFor(model => model.Status)
            
                @Html.HiddenFor(model => model.RegTime)
            
                @Html.HiddenFor(model => model.ModfiedTime)
    }