@model HNCJ.DY.Model.ActionInfo

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Add</h2>
@section header{
    <script src="~/Content/jcrop/jquery.upload.js"></script>
    <script type="text/javascript">
        function submitForm() {
            var name = $("#ActionName").val();
            var pwd = $("#Url").val();
            if (name == "") {
                alert("权限名不能为空？");
                return false;
            }
            if (pwd == "") {
                alert("URL不能为空？");
                return false;
            }
            $("form").submit();
        }
        function doUpload() {
            var name = $("#MenuIcon").val();

            // 上传方法
            $.upload({
                // 上传地址
                url: '/UserDoAction/UploadImage',
                // 文件域名字
                fileName: 'Filedata',
                // 其他表单数据
                params: { name: name },
                // 上传完成后, 返回json, text
                dataType: 'json',
                // 上传之前回调,return true表示可继续上传
                onSend: function () {
                    return true;
                },
                // 上传之后回调
                onComplate: function (data) {
                    $("#img").attr('src', data.path);
                    $("#MenuIcon").attr('value', data.path);

                    //alert(data.path);
                }
            });
        }
        $(function () {
            $("#menu").css('display', 'none');
            $("#check").change(function () {
                $("#menu").toggle();

            });
        });
    </script>
   
    
    }
@section content{
    <div style="margin-top:-30px;">
           <div style="margin-bottom:10px;">
			<input class="easyui-textbox"  style="width:100%;height:32px" type="text" id="ActionName" name="ActionName"data-options="label:'权限名:'"  >
		   </div>
        <div style="margin-bottom:10px">
			<input class="easyui-textbox"  style="width:100%;height:32px" type="text" id="Url" name="Url"data-options="label:'URL:'"  >
		   </div>
        <div style="margin-bottom:10px">
                <select class="easyui-combobox" name="HttpMethd" label="HTTP:" style="width:200px;"data-options="panelHeight:50">
                <option value="get">Get</option>
                <option value="post">Post</option>
                </select>
		   </div>
        <div style="margin-bottom:10px">
			<input class="easyui-numberbox"  style="width:200px;height:32px" type="text" id="Sort" name="Sort"data-options="label:'排序号:'"  >
		   </div>
        <div style="margin-bottom:10px">
            <div>是否菜单:<input type="checkbox" name="IsMenu"id="check"value="true" style="width:15px;height:15px;" /></div>
			
		   </div>
    
			<div style="margin-bottom:10px" id="menu">
                <div>上传文件:<a href="#" onclick="doUpload();" class="btn" style="text-decoration:none;">上传</a></div>
                <input type="hidden" id="MenuIcon" name="MenuIcon"  >
                <img id="img" src="/" alt="" style="width:40px;height:40px;" />
		   </div>
        </div>
    }