@model HNCJ.DY.Model.TopicInfo

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Add</h2>
@section header{
    <script type="text/javascript">
        function submitForm() {
            var name = $("#Title").val();
            var pwd = $("#Content").val();
            if (name == "") {
                alert("主题名不能为空？");
                return false;
            }
            if (pwd == "") {
                alert("正文不能为空？");
                return false;
            }
            $("form").submit();
        }
    </script>
   <style type="text/css">
       .sec {
           width:173px;height:32px;
           border:1px solid #95B8E7;border-radius:5px;font-size:15px;
           margin-left:30px;
       }
   </style>
    
    }
@section content{
    <div style="margin-top:-40px;">
    <div style="margin-bottom:10px">
			<div>主题名:</div>
			<input class="easyui-textbox" style="width:100%;height:32px"id="Title" name="Title">
		</div>
     <div style="margin-bottom:10px">
			<div>正文:</div>
			<input class="easyui-textbox" style="width:100%;height:60px"id="Content" name="Content"data-options="multiline:true" >
		</div>
        <div style="margin-bottom:10px">
                <select class="easyui-combobox" name="Type" label="类型:" style="width:260px;height:32px"data-options="panelHeight:100">
                    <option value="1">置顶</option>
                    <option value="2">精华</option>
                    <option value="3">热门</option>
                    <option value="4">普通</option>
                </select>
		   </div>

        
   
        
               
        </div>
    }